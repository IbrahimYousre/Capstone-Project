<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Auth" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="ColoredButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="LightButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimaryLight</item>
    </style>

    <style name="WhiteButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

</resources>
